<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="300.0" prefWidth="300.0" stylesheets="@login.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AirlineManagementSystem.AirlineLoginController">
   <children>
      <Button fx:id="LoginLoginButton" layoutX="69.0" layoutY="229.0" mnemonicParsing="false" onAction="#Login" stylesheets="@login.css" text="Login">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <TextField fx:id="LoginUsernameTextField" layoutX="38.0" layoutY="110.0" promptText="Username">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <Label fx:id="LoginStatusLabel" layoutX="12.0" layoutY="67.0" prefHeight="18.0" prefWidth="276.0" text="Status" textFill="#d70e0e">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="LoginLoginLabel" layoutX="69.0" layoutY="14.0" prefHeight="46.0" prefWidth="162.0" stylesheets="@login.css" text="Login Page" underline="true">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <PasswordField fx:id="LoginPasswordPasswordField" layoutX="38.0" layoutY="171.0" prefHeight="40.0" prefWidth="223.0" promptText="Password">
         <font>
            <Font size="18.0" />
         </font>
      </PasswordField>
      <Button fx:id="LoginCloseButton" layoutX="163.0" layoutY="229.0" mnemonicParsing="false" onAction="#Close" stylesheets="@login.css" text="Close">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
